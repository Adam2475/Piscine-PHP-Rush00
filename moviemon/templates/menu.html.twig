{# templates/main_menu.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="menu">

    <img src="{{ asset('images/moviemon.png') }}" width="500" alt="Moviemon">

     <form action="{{ path('new') }}" method="POST">
        <br>
        <label for="player_name">Enter Player Name:</label>
        <input type="text" id="player_name" name="player_name" required>
        <br>
        <label for="player_name">Set map size:</label>
        <input type="number" id="map_size" name="map_size" required>
        <br>
        <br>
        <button type="submit">Start New Game</button>
    </form>

    {% if fromOverworld %}
        <p><a href="{{ path('save') }}">Save Game</a></p>
    {% else %}
        <p><a href="#">Save Game</a></p>
    {% endif %}

    <p><a href="{{ path('load') }}">Load Game</a><p>

    {% if fromOverworld %}
    <p><a href="{{ path('overworld') }}">Cancel</a></p>
    {% endif %}
</div>
{% endblock %}

